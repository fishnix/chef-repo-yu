# User which runs Apache ServiceMix
KARAF_USER="appa"

# Where Apache ServiceMix lives
KARAF_HOME="<%= node[:fuseesb][:fuseesb_home] %>"
KARAF_BASE="<%= node[:fuseesb][:fuseesb_home] %>"
KARAF_DATA="<%= node[:fuseesb][:fuseesb_home] %>/data"
KARAF_INSTANCEDIR="<%= node[:fuseesb][:fuseesb_home] %>/instances"

# Where JVM is installed
JAVA_HOME="<%= node[:java][:java_home] %>"

# Memory settings for JVM
MAXPERM="<%= node[:fuseesb][:maxperm] %>"
MAXHEAP="<%= node[:fuseesb][:maxheap] %>"
MINHEAP="<%= node[:fuseesb][:minheap] %>"

# Additional options for JAVA
ADDLJVAOPTS="<%= @java_opts.join(' ') %>"

# Enable the parent
PARENT_ENABLED=<%= node[:fuseesb][:parent_enabled] %>

# Start instances
# This will start the following (but won't create them!)
KARAF_INSTANCES=( <%= @instances.join(' ') %> )