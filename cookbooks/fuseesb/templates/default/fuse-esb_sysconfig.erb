# User which runs Apache ServiceMix
KARAF_USER="<%= node[:fuseesb][:user] %>"

# Where Apache ServiceMix lives
KARAF_HOME="<%= node[:fuseesb][:home] %>"

# Set the name of the root container
KARAF_NAME="<%= node[:fuseesb][:name] %>"

# Additional Karaf options
ADDLKRFOPTS=""

# Where JVM is installed
JAVA_HOME="<%= node[:java][:java_home] %>"

# Memory settings for JVM
MAXPERM="<%= node[:fuseesb][:maxperm] %>"
MAXHEAP="<%= node[:fuseesb][:maxheap] %>"
MINHEAP="<%= node[:fuseesb][:minheap] %>"

# Additional options for JAVA
ADDLJVAOPTS="<%= @java_opts.join(' ') %>"